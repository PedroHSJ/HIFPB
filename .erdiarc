{
  // configuration file type
  "type": "md",

  // if set output option, erdia write result that is given name
  "output": [
     "erdiagram.md", "entity.md"
  ],

  // indent size of mermaid code
  "indent": 2,

  // output column of er diagram
  // 
  // attribute-key
  // comment
  "er-columns": [
     "attribute-key",
     "comment"
  ],

  // verbose message display
  "verbose": false,

  "html-br": true,

  // typeorm dataSourcePath
  "data-source-path": "src/data-source.ts",
  
  // type of generated document
  "components": [
    "er", "table"
  ],
  
  // ouptut column of generated table
  // 
  // entity-name
  // attribute-key
  // comment
  "table-columns": [
     "entity-name",
     "attribute-key",
     "comment"
  ],

  "theme": "default"
}